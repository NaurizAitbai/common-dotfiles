#!/bin/sh

# Statusbar loop
while true; do
    # Datetime
    str_datetime=$(date +"%F %R")

    # Volume
    if [ $(pulsemixer --get-mute) == "1" ]; then
        str_volume=MUTED
    else
        str_volume=$(pulsemixer --get-volume | sed 's/\(.*\)[ ]\(.*\)/\1/')%
    fi

    # Count directories and files in $HOME/.tmp/
    str_tmp_count=$(ls -1 $HOME/.tmp | wc -l)

    xsetroot -name "TMP: $str_tmp_count | VOL: $str_volume | $str_datetime"
    sleep 1m
done &
