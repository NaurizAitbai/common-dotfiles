#!/bin/sh

# Statusbar loop
while true; do
    # Datetime
    str_datetime=$(date +"%F %R")

    # Volume
    if [ $(pulsemixer --get-mute) == "1" ]; then
        str_volume=MUTED
    else
        str_volume=$(pulsemixer --get-volume | sed 's/\(.*\)[ ]\(.*\)/\1/')%
    fi

    xsetroot -name "VOL: $str_volume | $str_datetime"
    sleep 1m
done &
