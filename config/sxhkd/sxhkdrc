# Region Screenshot Clipboard
super + s
    sh $HOME/.local/bin/region_screenshot_clipboard

# Region Screenshot File
super + shift + s
    sh $HOME/.local/bin/region_screenshot_file

# Change Volume
super + {minus,equal}
    pulsemixer --change-volume {-,+}5 && sh $HOME/.local/bin/dwm_refresh_statusbar

# Change Volume to 50%
super + plus
    pulsemixer --set-volume 50 && sh $HOME/.local/bin/dwm_refresh_statusbar

# Volume Mute Toggle
super + underscore
    pulsemixer --toggle-mute && sh $HOME/.local/bin/dwm_refresh_statusbar

# Music Toggle
super + shift + p
    cmus-remote -u

# Lockscreen
super + shift + l
    pulsemixer --mute && { i3lock -n -t -i $HOME/.lock.png; pulsemixer --unmute; sh $HOME/.local/bin/dwm_refresh_statusbar; }

# dmenu: Emoji
super + e
    sh $HOME/.local/bin/dmenuunicode

# Start File Manager
super + r
    st -e ranger
