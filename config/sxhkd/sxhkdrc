# Region Screenshot Clipboard
super + s
    sh $HOME/.local/bin/region_screenshot_clipboard

# Region Screenshot File
super + shift + s
    sh $HOME/.local/bin/region_screenshot_file

# Change Volume
super + {minus,equal}
    pulsemixer --change-volume {-,+}5 && sh $HOME/.local/bin/dwm_refresh_statusbar

# Change Volume to 50%
super + plus
    pulsemixer --set-volume 50 && sh $HOME/.local/bin/dwm_refresh_statusbar

# Volume Mute Toggle
super + underscore
    pulsemixer --toggle-mute && sh $HOME/.local/bin/dwm_refresh_statusbar

# Music Toggle
super + shift + p
    cmus-remote -u

# Keyboard Layout Changes
super + a
    setxkbmap -layout "us,ru" -option grp:caps_toggle
super + shift + a
    setxkbmap -layout "us,kz" -option grp:caps_toggle

# Temp Dvorak Changes
super + z
    setxkbmap -layout "us,ru" -variant "dvp," -option grp:caps_toggle

# Lockscreen
super + shift + l
    pulsemixer --mute && { i3lock -n -t -i $HOME/.lock.png; pulsemixer --unmute; sh $HOME/.local/bin/dwm_refresh_statusbar; }

# Start File Manager
super + r
    st -e ranger --cachedir=$HOME/.tmp/ranger
